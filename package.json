{
  "name": "ffmpeg-lib",
  "version": "1.1.0",
  "description": "FFmpeg-based library for video processing",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "type": "module",
  "scripts": {
    "start": "bun run dist/index.js",
    "dev": "bun run src/index.ts",
    "build": "tsc",
    "build:binaries": "bun run build && bun build --compile --target=bun-linux-x64 --outfile=binaries/video-processor-linux dist/index.js && bun build --compile --target=bun-darwin-x64 --outfile=binaries/video-processor-macos dist/index.js && bun build --compile --target=bun-windows-x64 --outfile=binaries/video-processor-win.exe dist/index.js",
    "prepublishOnly": "bun run build",
    "publish": "bun publish",
    "publish:npm": "npm publish --access public",
    "test": "bun test --timeout 60000",
    "type-check": "tsc --noEmit"
  },
  "files": [
    "dist",
    "readme.md",
    "docs"
  ],
  "bin": {
    "video-processor": "./dist/index.js"
  },
  "keywords": [
    "ffmpeg",
    "video",
    "processing",
    "converter"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "adm-zip": "^0.5.16",
    "fs-extra": "^11.1.0",
    "subs-converter": "^1.0.2"
  },
  "devDependencies": {
    "@types/adm-zip": "^0.5.5",
    "@types/bun": "^1.2.23",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.10.5",
    "typescript": "^5.3.3"
  }
}
